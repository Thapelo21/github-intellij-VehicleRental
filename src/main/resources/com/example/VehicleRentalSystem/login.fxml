<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.VehicleRentalSystem.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: #ffffff; -fx-border-radius: 12; -fx-border-color: #dcdde1; -fx-border-width: 1px; -fx-background-radius: 12;"
      prefWidth="400" prefHeight="350">

    <Label text="Login"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" />

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-background-color: #f0f2f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10 15;" />
    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-background-color: #f0f2f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10 15;" />

    <Button text="Login" onAction="#handleLogin"
            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20; -fx-font-size: 14px;" />
    <Button text="Register" onAction="#goToRegister"
            style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 20; -fx-font-size: 14px;" />

</VBox>
