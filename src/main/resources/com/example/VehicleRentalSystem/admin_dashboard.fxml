<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.VehicleRentalSystem.AdminDashboardController"
      spacing="20" alignment="CENTER"
      prefWidth="400" prefHeight="400" style="-fx-padding: 20; -fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dcdde1; -fx-border-width: 1px;">

    <Label text="Admin Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3436; -fx-padding: 10px 0;"/>

    <Button text="Manage Vehicles" fx:id="manageVehiclesBtn" style="-fx-font-size: 14px; -fx-background-color: #636e72; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-weight: bold;"/>
    <Button text="Manage Customers" fx:id="manageCustomersBtn" style="-fx-font-size: 14px; -fx-background-color: #636e72; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-weight: bold;"/>
    <Button text="View Reports" fx:id="viewReportsBtn" style="-fx-font-size: 14px; -fx-background-color: #636e72; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-weight: bold;"/>
    <Button text="Handle Payments" fx:id="handlePaymentsBtn" style="-fx-font-size: 14px; -fx-background-color: #636e72; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-weight: bold;"/>
    <Button text="Logout" fx:id="logoutBtn" style="-fx-font-size: 14px; -fx-background-color: #d63031; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-weight: bold;"/>

</VBox>
