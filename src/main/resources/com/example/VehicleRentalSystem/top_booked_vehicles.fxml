<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.VehicleRentalSystem.TopBookedVehiclesController"
      spacing="20" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: #f8f9fa; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #dcdde1; -fx-border-width: 1px;">

    <Label text="Top Booked Vehicles"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" />

    <BarChart fx:id="topVehiclesChart" title="Top Booked Vehicles"
              style="-fx-background-color: white; -fx-border-radius: 8; -fx-padding: 10;">
        <xAxis>
            <CategoryAxis fx:id="xAxis" label="Vehicle" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="yAxis" label="Bookings" />
        </yAxis>
    </BarChart>

    <Button text="Back" onAction="#goBack"
            style="-fx-background-color: #636e72; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 24;" />
</VBox>
